<% include ../partials/html-head %>
<% include ../partials/header %>

<div class="container">	
	<div class="row">
		<h1 class="text-center">Create a New Financial Institution</h1>
		<div class="col-sm-4 col-sm-offset-4">
			<form action="/fis" method="POST">
				<div class="form-group">
					<label for="fi[name]">Name</label>
					<input class="form-control" type="text" name="fi[name]" placeholder="Name"/>
				</div>
				<div class="form-group">
					<label for="fi[location]">Location</label>
					<input class="form-control" type="text" name="fi[location]" placeholder="City, ST" min="0.01" step="0.01" />
				</div>
				<div class="form-group">
					<label for="fi[type]">Institution Type</label>
					<select class="form-control" name="fi[type]">
						<option value="bank">Bank</option>
						<option value="credit_union">Credit Union</option>
					</select>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
		</div>
	</div>
	
</div>

<% include ../partials/footer %>